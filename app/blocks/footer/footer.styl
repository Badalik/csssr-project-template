.footer
	position absolute
	z-index 2
	left 0
	bottom 0
	padding-top 15px
	padding-bottom 15px
	width 100%
	background-color #000
	+at('l')
		padding-top 12px
		padding-bottom 12px
	+below('m')
		padding-bottom 8px
	+at('m')
		padding-top 8px
		padding-bottom 8px
	+below($m-width)
		padding-top 5px

	.page_state_overflow &

		&.footer_fixed
			position fixed
			z-index 1
