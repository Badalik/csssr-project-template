.footer
	position absolute
	z-index 2
	left 0
	bottom 0
	padding-top 13px
	padding-bottom 13px
	width 100%
	font-size 16px
	line-height 1.2
	text-align center
	background-color rgba(#000, .9)

	+at('l')
		padding-top 12px
		padding-bottom 12px
	+below('m')
		padding-bottom 8px
	+at('m')
		padding-top 8px
		padding-bottom 8px
	+below($m-width)
		padding-top 5px

	&_fixed
		position fixed

	a
		text-decoration none

		&:hover
			text-decoration underline
