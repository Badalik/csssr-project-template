.input
	padding-right 20px
	padding-left 20px
	width 100%
	height 60px
	font-size 16px
	color #777
	background-color #fff
	border-width 1px
	border-style solid
	border-color #dadfe9
	border-radius 100px
	box-shadow none
	transition .2s border-color ease-out 0s
	backface-visibility hidden
	will-change border-color

	&::placeholder
		color #777
