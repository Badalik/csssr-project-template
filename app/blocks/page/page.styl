html
	height 100%

&::selection
	background-color rgba(#611f1f, .7)

.page
	height 100%
	min-height 100%
	font-family $roboto
	font-size 16px
	font-weight 400
	color #000
	background-color #222

.grid

	&__wrapper
		position relative
		overflow hidden
		min-height 100%

		.page_center &

			@supports (display: flex)
				display flex
				justify-content flex-start
				flex-direction column

		&_stylish
		&.wrapper_stylish
			min-height 200vh

	&__content
		margin-top auto
		margin-bottom auto
		padding-top 20px
		padding-bottom 20px
