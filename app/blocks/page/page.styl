html
	height 100%

&::selection
	background-color rgba(#611f1f, .7)

.page
	height 100%
	min-height 100%
	font-family $roboto
	font-size 16px
	font-weight 400
	color #000
	background-color #222

.grid

	&__wrapper
		position relative
		padding-bottom 80px
		overflow hidden
		min-height 100%
		+at('l')
			padding-bottom 100px
		+at('m')
			padding-bottom 160px
		+at('s')
			padding-bottom 170px

	&__content
		padding-top 20px
		padding-bottom 20px

	&__row
		margin-top 40px
		margin-bottom 40px
		+at('l')
			margin-top 30px
		+at('m')
			margin-top 15px
			margin-bottom 30px
		+below($m-width)
			margin-bottom 20px

		&_fill
			background-color #000
