mixin list(items)

	- items = items || []

	style.
		.list {
			margin-top: 130px;
			margin-right: auto;
			margin-left: auto;
			width: 100%;
			max-width: 600px;
			text-align: left;
			color: #859eb1;
			background-color: transparent;
			border: 1px solid #ffffff;
			counter-reset: pages;
		}

		.list__item {
			border-bottom: 1px solid #ffffff;
		}

		.list__item:last-child {
			border-bottom: none;
		}

		.list__link {
			position: relative;
			padding: 15px 10px 15px 36px;
			display: block;
			line-height: 1.2;
			text-decoration: none;
			color: rgba(255, 255, 255, .7);
			counter-increment: pages;
		}

		.list__link:before {
			position: absolute;
			top: 15px;
			left: 10px;
			content: counter(pages)'.';
		}

		.list__link:hover {
			text-decoration: underline;
		}
		@media only screen and (max-width: 767px) and (min-width: 360px) {
			.list {
				margin-top: 60px;
			}
		}

		@media only screen and (max-width: 359px) {
			.list {
				margin-top: 40px;
			}
		}
	ul.list&attributes(attributes)

		each item in items

			- title = item[0] || ''
			- link = item[1] || jv0

			li.list__item
				a.list__link(href=link target='_blank' style='color:rgba(255, 255, 255, .7)')= title
