.flow
	display none

	&__row
		text-align center

	&__title
		margin-bottom 15px
		font-size 20px
		font-weight 600
		line-height 1.2
		text-align center

	&__instruction
		font-size 16px
		font-weight 500
		line-height 1.2
		text-align left

	&__check-wrapper
		display inline-block
		vertical-align top

	&__check
		display inline-block
		width 20px
		height 20px
		vertical-align middle

	&__check-title
		margin-left 5px
		display inline-block
		font-size 16px
		font-weight 500
		line-height 1.2
		vertical-align middle

	&__age-select
		display inline-block
		width 130px
		vertical-align top

	&__code
		margin-right 11px
		display inline-block
		width 150px
		vertical-align top

	&__spinner
		position relative
		top -11px
		display inline-block
		width 14px
		height 14px
		font-size 10px
		text-indent -9999em
		user-select none
		color #ff8600
		border-radius 50%
		transform translateZ(0)
		animation load-linear-circles 1.8s infinite ease-in-out
		animation-delay -.16s
		animation-fill-mode both
		backface-visibility hidden
		will-change box-shadow

		&:before
		&:after
			position absolute
			top 0
			display inline-block
			width 14px
			height 14px
			content ''
			border-radius 50%
			animation load-linear-circles 1.8s infinite ease-in-out
			animation-fill-mode both

		&:before
			left -25px
			animation-delay -.32s

		&:after
			right -25px

@keyframes load-linear-circles
	0%,
	80%,
	100%
		box-shadow 0 14px 0 -7px

	40%
		box-shadow 0 14px 0 0
