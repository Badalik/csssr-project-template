.mno
	text-align center

	&__item
		margin-right 15px
		display inline-block
		vertical-align top
		cursor pointer
		user-select none

		&:last-child
			margin-right 0

		&-image-wrapper
			height 110px
			text-align center

			@supports (display: flex)
				padding 10px
				display flex
				flex-direction column
				justify-content center
				width 120px
				height 120px
				border 3px solid #fff

		&-image
			display inline-block
			max-width 100%
			max-height 100px
			vertical-align bottom

		&-title
			margin-top 14px
			font-size 18px
			font-weight 700
			line-height 1.2
			text-align center
